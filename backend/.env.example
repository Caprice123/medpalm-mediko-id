# Server Configuration
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/medpalm?schema=public"

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production-use-strong-random-string
JWT_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id-from-console.cloud.google.com

# Google Gemini AI
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# CORS
CORS_ORIGIN=http://localhost:5173

# Frontend URL (for Xendit payment redirects)
FRONTEND_URL=http://localhost:3000

# Xendit Payment Gateway
# Get your keys from: https://dashboard.xendit.co/settings/developers#api-keys
XENDIT_SECRET_KEY=xnd_development_your_secret_key_here
# Webhook verification token (set this in Xendit dashboard under Webhooks settings)
XENDIT_WEBHOOK_TOKEN=your_custom_webhook_verification_token_here

# iDrive e2 Cloud Storage (S3-compatible)
# Get your credentials from: https://www.idrive.com/e2/
IDRIVE_E2_ACCESS_KEY=your_idrive_e2_access_key
IDRIVE_E2_SECRET_KEY=your_idrive_e2_secret_key
IDRIVE_E2_ENDPOINT=your_idrive_e2_endpoint_url
IDRIVE_E2_BUCKET=your_bucket_name
IDRIVE_E2_REGION=us-east-1
